<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Homepage</title>
</head>
<body class="bg-light">
  <%- include('./partials/nav') %> 

  <div class="container mt-5">
    <h2 class="mb-4 fw-bold text-center text-primary">ðŸ“š Latest Blogs</h2>
    
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-3 blog-card">
            
            <!-- Blog Image -->
            <img src="<%= blog.coverImageURL %>" class="card-img-top rounded-top" alt="<%= blog.title %>">
            
            <!-- Blog Content -->
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold"><%= blog.title %></h5>
              
              <% if (blog.createdBy) { %>
                <p class="text-muted small mb-2">
                  <img 
                    src="<%= blog.createdBy.profileImageURL %>" 
                    class="rounded-circle me-2" 
                    width="30" height="30" 
                    alt="Author">
                  <%= blog.createdBy.fullName %>
                </p>
              <% } %>
              
              <p class="card-text text-muted flex-grow-1">
                <%= blog.body.substring(0, 100) %>...
              </p>

              <!-- Read More Button -->
              <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary mt-auto">
                Read More â†’
              </a>
            </div>

          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <style>
    /* Extra polish */
    .blog-card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .blog-card:hover {
      transform: translateY(-5px);
      box-shadow: 0px 6px 18px rgba(0,0,0,0.15);
    }
  </style>

  <%- include('./partials/scripts') %>
</body>
</html>
